<!-- views/index.ejs -->
<!doctype html>
<html>
<head>

	<% include ../partials/header %>
	
</head>
<body>
	<div id="wrapper">

		<% include ../partials/nav %>

		<div id="page-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">Members of Club<% if(isAll == false) {%>} - <%= clubName %><% } %></h1>
					<% if(isAll == false && clubName != 'all' && permission != 'assistant') { %>
					<a href="/newMember?clubName=<%= clubName %>" class="btn btn-default"><span class="fa fa-plus-square"></span> Add New Member</a>
					<% } %>
					<!-- /.col-lg-12 -->
				</div>
				<div class="container">
					<div class="col-lg-4">
						<div class="table-responsive">
							<table class="table table-bordered table-hover table-striped">
								<thead>
									<tr>
										<th>Name</th>
										<th>Club</th>
									</tr>
								</thead>
								<tbody>
									<% if(members) members.forEach(function(member) { %>
									<tr>
										<td><%= member.firstName + " " + member.lastName %></td>
										<td><%= member.Club.name %></td>
									</tr>
									<% }); %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>


		</div>
		<!-- /#page-wrapper -->

	</div>
	<!-- /#wrapper -->

	<% include ../partials/footer %>
</body>
</html>